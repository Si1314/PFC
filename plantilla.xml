
<?xml version="1.0"?>

<funcion tipo="void" nombre="main">
	<param tipo="int" nombre="x"/>
	<body>
		<asignacion nombre="x" valor="4"/>
		<declaracionAsignacion tipo="int" nombre="y" valor="2"/>
		<declaracionAsignacion tipo="int" nombre="z" valor="3"/>
		<if>
			<operadorBinario tipo="bool" operador="<">
				<operando nombre="x"></operando>
				<operando nombre="y"></operando>
			</operadorBinario>
			<then>
			    <operadorBinario tipo="igualdad" operador="=">
			    	<operando nombre="x"></operando>
					<operando nombre="y"></operando>				    	
			    </operadorBinario>
			</then>
			<else>
				<operadorBinario tipo="igualdad" operador="=">
			    	<operando nombre="y"></operando>
					<operadorBinario tipo="aritmetico" operador="+">
						<operando nombre="x"></operando>
						<integer valor="1"></integer>
					</operadorBinario>				    	
			    </operadorBinario>
			</else>
		</if>
	</body>
</funcion>

