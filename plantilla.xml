
<?xml version="1.0"?>

<funcion tipo="void" nombre="main">
	<param tipo="int" nombre="x"/>
	<body>
		<asignacion nombre="x">
			<numero valor="1"></numero>
		</asignacion>

		<declaracion tipo="int" nombre="y"/>

		<asignacion nombre="y">
			<numero valor="2"></numero>
		</asignacion>

		<declaracion tipo="int" nombre="z"/>

		<if>
			<operadorBinario tipo="bool" operador="<">
				<operando nombre="x"></operando>
				<operando nombre="y"></operando>
			</operadorBinario>
			<then>
			    <asignacion nombre="x">
					<operando nombre="y"></operando>				    	
			    </asignacion>
			    <asignacion nombre="z">
					<numero valor="0"></numero>			    	
				</asignacion>
			</then>
			<else>
				<asignacion nombre="z">
					<operadorBinario tipo="aritmetico" operador="+">
						<operando nombre="x"></operando>
						<operando nombre="y"></operando>
					</operadorBinario>				    	
			    </asignacion>
			</else>
		</if>
		<asignacion nombre="z">
			<operadorBinario tipo="aritmetico" operador="+">
				<operando nombre="z"></operando>
				<numero valor="1"></numero>
			</operadorBinario>				    	
		</asignacion>
	</body>
</funcion>

