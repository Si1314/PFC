<function name="main" type="void">
	<param type="int" name="x"/>
	<param type="int" name="y"/>
	<param type="int" name="z"/>
	<body>

		<!-- if -->
		<if>
			<!-- (x > y) -->
			<binaryOperator type="bool" operator=">">
				<variable name="x"/>
				<variable name="y"/>
			</binaryOperator>

			<!-- then -->
			<then>
				<body>
					<!-- int z = 1; -->
					<assignment name="z">
						<const value="1"/>
					</assignment>
				</body>
			</then>

			<!-- else -->
			<else>
				<body>
					<!-- int z = 2; -->
					<assignment name="z">
						<const value="2"/>
					</assignment>
				</body>
			</else>
		</if>

	</body>
</function>

