
<?xml version="1.0"?>

<function type="void" name="main">
	<param type="int" name="x"/>
	<body>

		<!-- x = 0; -->
		<assignment name="x">
			<constant value="0"></constant>
		</assignment>

		<!-- int n = 3; -->
		<declaration type="int" name="n"/>
		<assignment name="n">
			<constant value="3"></constant>
		</assignment>

		<for>

			<!-- variable -->
			<variableField>

				<!-- int i = 0; -->
				<declaration type="int" name="i"/>
				<assignment name="i">
					<constant value="0"></constant>
				</assignment>

			</variableField>

			<!-- condicion -->
			<!-- i < n -->
			<binaryOperator type="bool" operator="<">
				<variable name="i"></variable>
				<variable name="n"></variable>
			</binaryOperator>

			<!-- advance -->
			<!-- i++ -->
			<assignment name="i">
				<binaryOperator type="arithmetic" operator="+">
					<variable name="i"></variable>
					<constant value="1"></constant>
				</binaryOperator>				    	
		    </assignment>

		    <!-- for's body -->
			<body>

 				<!-- x = x + 1; -->
				<assignment name="x">
					<binaryOperator type="arithmetic" operator="+">
						<variable name="x"></variable>
						<constant value="1"></constant>
					</binaryOperator>				    	
			    </assignment>

			</body>
		</for>

	</body>
</function>

