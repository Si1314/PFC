
<?xml version="1.0"?>

<function type="void" name="main">
	<param type="int" name="x"/>
	<body>

		<!-- x = 1; -->
		<assignment name="x">
			<constant value="1"></constant>
		</assignment>

		<!-- int y = 2; -->
		<declaration type="int" name="y"/>
		<assignment name="y">
			<constant value="2"></constant>
		</assignment>

		<!-- int z; -->
		<declaration type="int" name="z"/>

		<!-- if -->
		<if>
			<!-- (x < y) -->
			<binaryOperator type="bool" operator="<">
				<variable name="x"></variable>
				<variable name="y"></variable>
			</binaryOperator>

			<!-- then -->
			<then>

				<!-- x = y; -->
			    <assignment name="x">
					<variable name="y"></variable>				    	
			    </assignment>

			    <!-- z = 0; -->
			    <assignment name="z">
					<constant value="0"></constant>			    	
				</assignment>
				
			</then>

			<!-- else -->
			<else>

				<!-- z = x + y; -->
				<assignment name="z">
					<binaryOperator type="arithmetic" operator="+">
						<variable name="x"></variable>
						<variable name="y"></variable>
					</binaryOperator>				    	
			    </assignment>

			</else>
		</if>

		<!-- z = z + 1; -->
		<assignment name="z">
			<binaryOperator type="arithmetic" operator="+">
				<variable name="z"></variable>
				<constant value="1"></constant>
			</binaryOperator>				    	
		</assignment>

	</body>
</function>

