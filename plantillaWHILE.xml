
<?xml version="1.0"?>

<funcion tipo="void" nombre="main">
	<param tipo="int" nombre="x"/>
	<body>

		<!-- x = 1; -->
		<asignacion nombre="x">
			<numero valor="1"></numero>
		</asignacion>

		<!-- int y = 3; -->
		<declaracion tipo="int" nombre="y"/>
		<asignacion nombre="y">
			<numero valor="3"></numero>
		</asignacion>

		<!-- int z = 0; -->
		<declaracion tipo="int" nombre="z"/>
		<asignacion nombre="z">
			<numero valor="0"></numero>
		</asignacion>

		<while>

			<!-- (x < y) -->
			<operadorBinario tipo="bool" operador="<">
				<operando nombre="x"></operando>
				<operando nombre="y"></operando>
			</operadorBinario>

			<cuerpo> <!-- cuerpo del While -->

				<!-- z = z + 1; -->
				<asignacion nombre="z">
					<operadorBinario tipo="aritmetico" operador="+">
						<operando nombre="z"></operando>
						<numero valor="1"></numero>
					</operadorBinario>				    	
			    </asignacion>

			    <!-- x = x + 1; -->
				<asignacion nombre="x">
					<operadorBinario tipo="aritmetico" operador="+">
						<operando nombre="x"></operando>
						<numero valor="1"></numero>
					</operadorBinario>				    	
			    </asignacion>

			</cuerpo>

		</while>

	</body>
</funcion>

